# ========================================
# AUTHGUARD ENTERPRISE CONFIGURATION
# ========================================

# --- APPLICATION SETTINGS ---
ENV=production
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_SECRET_KEY=your-flask-secret-key-change-this-too

# --- FIREBASE CONFIGURATION ---
FIREBASE_CREDENTIALS=serviceAccountKey.json
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# --- REDIS CONFIGURATION ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600

# --- EMAIL/SMTP CONFIGURATION (for OTP) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM_NAME=AuthGuard Security

# --- API CONFIGURATION ---
API_HOST=0.0.0.0
API_PORT=5001
API_RATE_LIMIT=1000
API_TIMEOUT=30

# --- PORTAL CONFIGURATION ---
PORTAL_HOST=0.0.0.0
PORTAL_PORT=5000
SESSION_TIMEOUT=3600

# --- SECURITY SETTINGS ---
BCRYPT_ROUNDS=12
JWT_EXPIRATION=86400
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800

# --- AI/ML SETTINGS ---
RISK_THRESHOLD_LOW=40
RISK_THRESHOLD_HIGH=80
ENTROPY_THRESHOLD=0.8
Z_SCORE_THRESHOLD=2.5

# --- GEO-LOCATION SETTINGS ---
GEO_API_KEY=your-ipgeolocation-api-key
MAX_VELOCITY_KMH=1000

# --- MONITORING & LOGGING ---
LOG_LEVEL=INFO
LOG_FILE=logs/authguard.log
SENTRY_DSN=

# --- PAYMENT/BILLING (Stripe) ---
STRIPE_PUBLIC_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# --- CDN & ASSETS ---
CDN_URL=https://cdn.authguard.io
STATIC_URL=/static

# --- FEATURE FLAGS ---
ENABLE_2FA=True
ENABLE_EMAIL_VERIFICATION=True
ENABLE_RATE_LIMITING=True
ENABLE_GEO_BLOCKING=False
ENABLE_ANALYTICS=True

# --- DATABASE BACKUP ---
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# --- CORS SETTINGS ---
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# --- SESSION SETTINGS ---
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax